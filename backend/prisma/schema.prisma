generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  ANALYST
  DEVELOPER
  VIEWER
}

enum EventStatus {
  UNRESOLVED
  SAFE
  MALICIOUS
  INVESTIGATING
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  alerts    Alert[]
}

model Event {
  id        String      @id @default(uuid())
  type      String
  source    String
  details   Json
  riskScore Int         @default(0)
  timestamp DateTime    @default(now())
  status    EventStatus @default(UNRESOLVED)
  alert     Alert?
}

model Alert {
  id               String    @id @default(uuid())
  eventId          String    @unique
  event            Event     @relation(fields: [eventId], references: [id])
  severity         Severity
  message          String
  status           String    @default("OPEN") // OPEN, ACKNOWLEDGED, RESOLVED
  assignedToId     String?
  assignedTo       User?     @relation(fields: [assignedToId], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  incidentId       String?
  incident         Incident? @relation(fields: [incidentId], references: [id])
  mitreTactic      String?
  mitreTechniqueId String?
  mitreTechniqueName String?
  aiSummary        String?
}

model Policy {
  id                 String   @id @default(uuid())
  name               String   @unique
  rule               Json
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  mitreTactic        String?
  mitreTechniqueId   String?
  mitreTechniqueName String?
}

model Incident {
  id        String   @id @default(uuid())
  severity  Severity
  status    String   @default("OPEN")
  summary   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  alerts    Alert[]
}

model BehavioralBaseline {
  id        String   @id @default(uuid())
  source    String
  metric    String   // e.g. "process_list", "event_volume"
  value     Json     // e.g. ["cmd.exe", "node.exe"] or { avg: 10, stdDev: 2 }
  updatedAt DateTime @updatedAt
  @@unique([source, metric])
}
